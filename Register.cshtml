@{
    ViewData["Title"] = "Home Page";
}

@model RegisterModel
<div class="col-sm-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Register</h3>
        </div>
        <div class="panel-body">
            <form asp-controller="Home" asp-action="Register" method="post">
                <fieldset>
                    <div class="form-group">
                        <label> UserName</label>
                        <input class="form-control" placeholder="Username" asp-for="Username" autofocus>
                        <span asp-validation-for="Username"></span>
                    </div>
                    <div class="form-group">
                        <label> FirstName</label>
                        <input class="form-control" placeholder="FirstName" asp-for="FirstName" autofocus>
                        <span asp-validation-for="FirstName"></span>
                    </div>
                    <div class="form-group">
                        <label> LastName</label>
                        <input class="form-control" placeholder="LastName" asp-for="LastName" autofocus>
                        <span asp-validation-for="LastName"></span>
                    </div>
                    <div class="form-group">
                        <label> Email</label>
                        <input class="form-control" type="email" placeholder="Email" asp-for="Email" autofocus>
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label> Password</label>
                        <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                        <label> Password</label>
                        <input type="password" class="form-control" placeholder="Confirm Password" asp-for="ConfirmPassword" autocomplete="off">
                        <span asp-validation-for="ConfirmPassword"></span>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary" name="button" value="login">Sign Up</button>
                        <button class="btn btn-default" name="button" value="cancel">Cancel</button>
                    </div>
                </fieldset>
            </form>
            <div>
                <a asp-controller="Home" asp-action="Login">Back To Login</a>
            </div>
        </div>
    </div>
</div>
